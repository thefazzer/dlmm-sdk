{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
