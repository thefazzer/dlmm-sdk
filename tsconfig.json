

{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["ts-client/src/**/*"],
  "exclude": ["node_modules"]
}